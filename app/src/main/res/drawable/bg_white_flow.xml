<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:duration="4000">
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#E3F2FD"
                android:angle="45"/>
        </shape>
    </item>

    <item android:duration="4000">
        <shape>
            <gradient
                android:startColor="#E3F2FD"
                android:endColor="#F3E5F5"
                android:angle="45"/>
        </shape>
    </item>

    <item android:duration="4000">
        <shape>
            <gradient
                android:startColor="#F3E5F5"
                android:endColor="#FFF3E0"
                android:angle="45"/>
        </shape>
    </item>

    <item android:duration="4000">
        <shape>
            <gradient
                android:startColor="#FFF3E0"
                android:endColor="#FFFFFF"
                android:angle="45"/>
        </shape>
    </item>

</animation-list>